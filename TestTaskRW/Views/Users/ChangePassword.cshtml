@model TestTaskRW.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<h2 class="text-center text-white">Изменение пароля для пользователя: @Model.UserName</h2>

<div class="container p-3" style="background-color: white; border-radius:5px; width:300px">
    <form asp-action="ChangePassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserName" />
       <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
        <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        <div class="form-group text-center">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
</div>