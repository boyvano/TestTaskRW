@model TestTaskRW.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container p-3 text-center" style="background-color: white; border-radius:5px; width:300px">
    <br />
<h2>Вход в аккаунт</h2>
<br />
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
            <label asp-for="Login">логин (Никнейм)</label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <br />
        <label asp-for="RememberMe "></label>
        <input asp-for="RememberMe" />
    </div>
    <div class="text-center">
        <br />
        <input type="submit" value="Войти" />
    </div>
</form>
</div>

